@page
@model WaterLogger.Dejmenek.Pages.CreateModel

<h2>Add Record</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="DrinkingWater.Date" class="control-label"></label>
                <input type="date" asp-for="DrinkingWater.Date" class="form-control" />
                <span asp-validation-for="DrinkingWater.Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DrinkingWater.Quantity" class="control-label"></label>
                <input type="number" asp-for="DrinkingWater.Quantity" step="0.1" class="form-control" />
                <span asp-validation-for="DrinkingWater.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DrinkingWater.MeasureId" class="control-label"></label>
                <select class="form-control" asp-items="Model.Options" asp-for="DrinkingWater.MeasureId">
                    <option value="">Select Measure</option>
                </select>
                <span asp-validation-for="DrinkingWater.MeasureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-page="./Index">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
